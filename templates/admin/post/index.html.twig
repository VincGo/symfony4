{% extends 'admin/layout.html.twig' %}

{% block body %}
    <table class="table table-striped table-middle-aligned">
        <thead>
            <tr>
                <th scope="col">Titre</th>
                <th scope="col">Publié le</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            {% for post in posts %}
                <tr>
                    <td>
                        <a href="{{ path('admin_show', {slug: post.slug}) }}">
                            {{ post.title }}
                        </a>
                    </td>
                    <td>{{ post.publishedAt|date("d/m/y à h:i:s") }}</td>
                    <td>
                        <div class="item-actions">
                            <a href="{{ path('admin_edit', {id: post.id}) }}">Editer</a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    {{ parent() }}
{% endblock %}
