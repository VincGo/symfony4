{% block body %}
    <div class="card my-4">
        <h5 class="card-header">Laissez un commentaire:</h5>
        <div class="card-body">
            <div class="form-group">
                {{ form_start(form) }}
                {{ form_row(form.title, {'label': 'Nom'}) }}
                {{ form_row(form.content, {'label': 'Commentaire'}) }}
                <input type="submit" value="envoyer" formnovalidate="formnovalidate">
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}