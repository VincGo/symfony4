{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-thumbnail">
        <div class="row">
            {# THUMBNAIL - MAIN #}
            <div class="featured-article">
                <a href="#">
                    <img src="{{ post.image.url }}" alt="{{ post.image.alt }}" class="thumb">
                </a>
                <div class="block-title">
                    <h2>
                        {{ post.title }}
                        {% if not post.tags.empty %}
                            <div class="post-tags">
                                {% for tag in post.tags %}
                                    <a href="{{ path('article_post', {tag: tag.name}) }}">{{ tag.name }}</a>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </h2>
                </div>
            </div>

            {# THUMBNAIL - SECONDARY #}
            <ul class="media-list main-list">
                {% for i in 0..3 %}
                <li>
                    <a class="pull-left" href="#">
                        <img class="media-object" src="http://placehold.it/150x90" alt="...">
                    </a>
                    <div class="media-title">
                        <a href="#">
                            <h4>La course au Top 8 à l’Ouest : ils sont encore huit pour six places</h4>
                        </a>
                    </div>
                    <div class="media-text">
                        Vous avez l’impression que le classement de la Conférence Ouest change en permanence ? C’est tout à fait normal, n’allez pas consulter...
                    </div>
                </li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="blog-post">
        <p class="blog-post-meta">
            {{ post.content }}
        </p>
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            {{ render(controller('App\\Controller\\CommentController::commentForm', {'id': post.id})) }}
            {% else %}
                <p>
                    <a href="{{ path('login') }}">Veuillez vous connecter pour publier un commmentaire</a>
                </p>
        {% endif %}
    </div>
    {% for comment in post.comments %}
        <div class="row post-comment">
            <h4 class="col-sm-3 info-msg">
                <em>{{ comment.author.fullName }}</em><br>
                <em>{{ comment.publishedAt|date('h:i:s') }}</em><br>
                <em>{{ comment.publishedAt|date('d/m/y') }}</em>
            </h4>
            <div class="col-sm-9">
                <p>{{ comment.content }}</p>
            </div>
        </div>
    {% endfor %}
{% endblock %}

